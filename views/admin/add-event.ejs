<!doctype html>
<html>
    <head>
       <title>ADD EVENT | FCAP</title>
       <meta charset="utf-8"> 
    </head> 
    <body>
        <%- include('../partials/admin/header') -%>
        <div class="row">
            <div class="col-sm-2" >


            </div>
            <div class="col-sm-6" >
                <h1 style="color:#937DC2;font-family: 'Anton', sans-serif;text-align:center;">FCAP ADD EVENT</h1>
                <br><br>
                <!--FORM -->
                <form action="/add-event" method="post">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">EVENT NAME</label>
                        <div class="col-sm-8">
                          <input type="text" class="form-control" name="eventName"  placeholder="Event Name" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Event Date</label>
                        <div class="col-sm-8">
                          <input type="date" class="form-control" name="eventDate"  required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">EVENT DETAILS</label>
                        <div class="col-sm-8">
                            <textarea name="eventDetail" rows="5" cols="30" class="form-control" placeholder="Type Your Event Details"></textarea>
                        </div>
                    </div>


                    <center>
                    <button type="submit" class="btn btn-primary" style="padding-left:13.5rem;padding-right:13.5rem;text-align:center;">Register Event</button>
                    </center>
                  
                </form>
                
            </div>
            <div class="col-sm-2" >

                
            </div>
        </div>
        
        





        <%- include('../partials/admin/footer') -%>
    </body>
</html>