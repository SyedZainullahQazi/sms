<!doctype html>
<html>
    <head>
       <title>ADD MEMBERS | FCAP</title>
       <meta charset="utf-8"> 
    </head> 
    <body>
        <%- include('../partials/admin/header') -%>
        <div class="row">
            <div class="col-sm-2" >


            </div>
            <div class="col-sm-6" >
                <h1 style="color:#937DC2;font-family: 'Anton', sans-serif;text-align:center;">FCAP MEMBERSHIP FORM</h1>
                <!--FORM -->
                <form action="/add-member" method="post">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">NAME</label>
                        <div class="col-sm-8">
                          <input type="text" class="form-control" name="fullname"  placeholder="Syed Zainullah Qazi" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">DOB</label>
                        <div class="col-sm-8">
                          <input type="date" class="form-control" name="dob"  required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">TEAM</label>
                      <div class="col-sm-8">
                      <select class="form-control" name="team">
                        <option>Technical Team</option>
                        <option>Logistics Team</option>
                        <option>Marketing Team</option>
                        <option>Admin Team</option>
                        <option>Finance Team</option>
                      </select>
                      </div>
                      </div>

                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">ROLL NO</label>
                        <div class="col-sm-8">
                          <input type="text" class="form-control" name="rollnum"  placeholder="f200328" required>
                        </div>
                      </div>

                    <div class="form-group row">
                      <label class="col-sm-2 col-form-label">EMAIL</label>
                      <div class="col-sm-8">
                        <input type="email" class="form-control" name="email"  placeholder="f200328@cfd.nu.edu.pk" required>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label class="col-sm-2 col-form-label">PASSWORD</label>
                      <div class="col-sm-8">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label class="col-sm-2 col-form-label">CGPA</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" name="cgpa" placeholder="3.98" required>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label class="col-sm-2 col-form-label">Whatsapp</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" name="whatsapp" placeholder="+923335034248" required>
                      </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">SKILL SET</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" name="skills" rows="3" placeholder="Brief Introduction to yourself and your skillset"></textarea>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">GENDER</label>
                        <div class="col-sm-8">
                            <select class="form-control" name="gender">
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                    </div>


                    <center>
                    <button type="submit" class="btn btn-primary" style="padding-left:15.5rem;padding-right:15.5rem;text-align:center;">Register</button>
                    </center>
                  
                </form>
                
            </div>
            <div class="col-sm-2" >

                
            </div>
        </div>
        
        





        <%- include('../partials/admin/footer') -%>
    </body>
</html>